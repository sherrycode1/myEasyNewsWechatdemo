/* pages/post-detail/post-detail.wxss */
.container{
  color: #333;
  padding: 0;
}
.content{
  box-sizing: border-box;
  width: 100%;
  display: flex;
  flex-direction: column;
  padding:40rpx 40rpx 40rpx 40rpx;

}
.head-image{
  width: 100%;
  height: 460rpx;
  
}

.writer-info{
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
}

.writer-image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.writer-text{
  padding-left: 20rpx;
  color: darkgrey;
  font-size: 30rpx;
}

.title{
  font-size: 50rpx;
}
.icons{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.icon{
  
  padding-right: 20rpx;
  width: 90rpx;
  height: 90rpx;
}
.circle{
  width: 100%;
  display: flex;
  justify-content: flex-end;
}
.horizon{
  width: 100%;
  height: 1px;
  background-color: #e5e5e5;
  position: absolute;
  z-index: -2;
}

.detail-content{
  padding-top: 30rpx;
}