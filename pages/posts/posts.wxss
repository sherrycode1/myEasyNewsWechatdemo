/* pages/posts/posts.wxss */

swiper {
  width: 100%;
  height: 460rpx;
}

swiper image {
  width: 100%;
  height: 460rpx;
}

.post-container{
  display: flex;
  flex-direction: column;
  margin: 20rpx 0;
  background-color: #fff;
  border-top: #ededed 1px solid;
  border-bottom: #ededed 1px solid;
  padding-bottom: 10rpx;
}
.post-author-date{
  margin: 10rpx 0 20rpx 20rpx;
  display: flex;
  align-items: center;
}

.post-author{
 width: 80rpx;
 height: 80rpx;
 border-radius: 50%;

}

.post-date{
  margin-left: 32rpx;
  
}
.post-title{
  font-size: 34rpx;
  margin:20rpx;
  font-weight: 600;
  color: #333;
}
.post-image{
  width: 100%;
  height: 440rpx;
  margin-bottom: 40rpx;
}

.post-content{
  color: #666;
  font-size: 30rpx;
  margin: 0rpx 10rpx 30rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}

.post-like{
  display: flex;
  margin-left: 20rpx;
  align-items: center;
}

.post-like-icon{
  padding-right: 10rpx;
}

.post-like-font{
  margin-right: 20rpx;
  font-size: 26rpx;
}